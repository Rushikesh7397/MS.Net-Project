                @Html.DisplayFor(modelItem => item.Education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Volunteer_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Volunteer_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Volunteer_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>